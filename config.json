{
  "embedding_model": "local",
  "local_embedding_model": "all-MiniLM-L6-v2",
  "openai_embedding_model": "text-embedding-3-small",
  "index_path": "./data/index",
  "chunk_size": 1000,
  "chunk_overlap": 200,
  "collection_name": "codebase",
  "search_limit": 10,
  "similarity_threshold": 0.2,
  "watch_directories": [],
  "reindex_interval_seconds": 30,
  "file_extensions": [
    ".py",
    ".js",
    ".jsx",
    ".ts",
    ".tsx",
    ".java",
    ".cpp",
    ".c",
    ".h",
    ".hpp",
    ".cs",
    ".go",
    ".rs",
    ".php",
    ".rb",
    ".swift",
    ".kt",
    ".scala",
    ".sh",
    ".bash",
    ".zsh",
    ".fish",
    ".md",
    ".mdx",
    ".txt",
    ".json",
    ".yaml",
    ".yml",
    ".xml",
    ".html",
    ".css",
    ".scss"
  ],
  "exclude_dirs": [
    ".git",
    "node_modules",
    "__pycache__",
    ".venv",
    "venv",
    "env",
    ".env",
    "dist",
    "build",
    ".next",
    "target",
    ".pytest_cache",
    ".mypy_cache",
    ".tox",
    "coverage",
    ".coverage",
    "htmlcov",
    ".DS_Store",
    "Thumbs.db",
    "data"
  ]
}
